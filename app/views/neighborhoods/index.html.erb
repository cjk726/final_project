<div class="page-header">
  <h1>
    Neighborhoods
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Neighborhood Name</th>
        <th>Actions</th>
      </tr>

      <% @neighborhoods.each do |neighborhood| %>
      <tr>
        <td><%= neighborhood.neighborhood_name %></td>
        <td>
          <a href="/neighborhoods/<%= neighborhood.id %>" class="btn btn-primary">Show</a>
          <a href="/neighborhoods/<%= neighborhood.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_neighborhood/<%= neighborhood.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    
    
    <form action="/create_neighborhood" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for neighborhood name -->
      <h3>Add a Neighborhood</h3>
      <div class="form-group">
        <label for="neighborhood_name" class="control-label">
          Neighborhood Name
        </label>

        <input type="text" id="neighborhood_name" name="neighborhood_name" placeholder="Name" class="form-control" value="<%= @neighborhood.neighborhood_name %>">
      </div>

      <button class="btn btn-success">
        Add Neighborhood
      </button>
    </form>

    
    
    
    
    
  </div>
</div>
